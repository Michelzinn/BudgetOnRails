<div class="min-h-screen bg-base-200">
  <div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-8">
      <h1 class="text-4xl font-bold">My Budgets</h1>
      <button class="btn btn-primary">
        <i class="las la-plus text-lg mr-2"></i>
        New Budget
      </button>
    </div>
    
    <% if @budgets.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @budgets.each do |budget| %>
          <%= render BudgetCardComponent.new(budget: budget) %>
        <% end %>
      </div>
    <% else %>
      <div class="hero">
        <div class="hero-content text-center">
          <div class="max-w-md">
            <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-base-300 mb-6">
              <i class="las la-calculator text-5xl text-base-content/40"></i>
            </div>
            <h1 class="text-3xl font-bold mb-4">No budgets</h1>
            <p class="text-base-content/70 mb-6">Start by creating your first monthly budget.</p>
            <button class="btn btn-primary">
              <i class="las la-plus text-lg mr-2"></i>
              Create First Budget
            </button>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>