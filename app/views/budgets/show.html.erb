<div class="min-h-screen bg-base-200">
  <div class="container mx-auto px-4 py-8">
    <div class="breadcrumbs text-sm mb-4">
      <ul>
        <li>
          <%= link_to budgets_path do %>
            <i class="las la-home text-lg mr-2"></i>
            Budgets
          <% end %>
        </li>
        <li><%= I18n.l(@budget.date, format: "%B %Y").capitalize %></li>
      </ul>
    </div>

    <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-8">
      <div>
        <h1 class="text-3xl font-bold mb-2">
          <%= I18n.l(@budget.date, format: "%B %Y").capitalize %> Budget
        </h1>
        <div class="flex flex-wrap gap-4 text-sm">
          <div class="flex items-center gap-2">
            <i class="las la-dollar-sign text-xl text-base-content/60"></i>
            <span>Total: <strong><%= format_money(@budget.total_amount_cents) %></strong></span>
          </div>
          <div class="flex items-center gap-2">
            <i class="las la-calendar text-xl text-base-content/60"></i>
            <span><%= @budget.date.strftime("%B %d, %Y") %></span>
          </div>
        </div>
      </div>
      
      <div class="flex gap-3 mt-4 md:mt-0">
        <button class="btn btn-outline">
          <i class="las la-edit text-lg mr-2"></i>
          Edit
        </button>
        <button class="btn btn-primary">
          <i class="las la-plus text-lg mr-2"></i>
          New Expense
        </button>
      </div>
    </div>
    
    <div class="space-y-6">
      <%= render BudgetSummaryTableComponent.new(budget: @budget, categories: @categories_with_data) %>
      <%= render ExpenseHistoryTableComponent.new(expenses: @expenses) %>
    </div>
  </div>
</div>