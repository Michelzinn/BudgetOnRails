<div class="card bg-base-100 shadow-xl mt-6">
  <div class="card-body">
    <h2 class="card-title">Expense History</h2>
    <% if expenses.any? %>
      <div class="overflow-x-auto">
        <table class="table table-zebra">
          <thead>
            <tr>
              <th>Date</th>
              <th>Time</th>
              <th>Description</th>
              <th>Category</th>
              <th class="text-right">Amount</th>
            </tr>
          </thead>
          <tbody>
            <% expenses.each do |expense| %>
              <tr>
                <td><%= format_date(expense.spent_at) %></td>
                <td class="text-base-content/60"><%= format_time(expense.spent_at) %></td>
                <td><%= expense.description %></td>
                <td>
                  <span class="badge badge-primary badge-sm"><%= expense.category.name %></span>
                </td>
                <td class="text-right font-medium"><%= format_money(expense.amount_cents) %></td>
              </tr>
            <% end %>
          </tbody>
          <tfoot>
            <tr class="font-bold">
              <td colspan="4">Total Expenses</td>
              <td class="text-right"><%= format_money(total_expenses) %></td>
            </tr>
          </tfoot>
        </table>
      </div>
    <% else %>
      <div class="text-center py-8">
        <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-base-200 mb-4">
          <i class="las la-clipboard-list text-4xl text-base-content/40"></i>
        </div>
        <h3 class="text-lg font-semibold mb-1">No expenses</h3>
        <p class="text-base-content/60">Start by adding a new expense to your budget.</p>
      </div>
    <% end %>
  </div>
</div>